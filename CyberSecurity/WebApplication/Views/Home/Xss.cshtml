@model User
@{
    var js = "<script>alert(\"test\");</script>";
}

<div class="alert alert-warning">
    Enter this snippet to try out XSS injection: <pre>@js</pre>
</div>
<form class="form-inline" asp-action="Xss">
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" asp-for="Username" class="form-control" placeholder="Username"></input>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

<div class="alert alert-info mt-2">
    @if (Model != null)
    {
        if (!string.IsNullOrWhiteSpace(Model.Username))
        {
            <p>Not safe (at all - html is rendered) : @Html.Raw(Model.Username)</p>
            <p>Safe one (html appear as brut text) : @Model.Username</p>
        }
        else
        {
            <p>String is empty</p>
        }
    }
</div>