@using Newtonsoft.Json

<div class="alert alert-info">
    <p>Bonjour @User.Identity.Name !</p>
</div>

<p>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Claims
    </button>
</p>

<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <pre>
            @JsonConvert.SerializeObject(User.Claims, Formatting.Indented, new JsonSerializerSettings()
            {
                ReferenceLoopHandling = ReferenceLoopHandling.Ignore
            })
        </pre>
    </div>
</div>

<ul class="list">
    <li class="list-item">
        <a asp-controller="SingleRole" asp-action="Index">SingleRole : Management</a>
    </li>
    <li class="list-item">
        <a asp-controller="SingleRole" asp-action="IndexAnonymous">AllowAnonymous</a>
    </li>
    <li class="list-item">
        <a asp-controller="OneOfRole" asp-action="Index">OneOfRole : Management or HR</a>
    </li>
    <li class="list-item">
        <a asp-controller="OneOfRole" asp-action="Index2">OneOfRole : Management (override default)</a>
    </li>
    <li class="list-item">
        <a asp-controller="AllOfRoles" asp-action="Index">AllOfRole : HR && Management</a>
    </li>
    <li class="list-item">
        <a asp-controller="Salary" asp-action="SalaryR">SalaryR (Management, Finance)</a>
    </li>
    <li class="list-item">
        <a asp-controller="Salary" asp-action="SalaryW">SalaryW (Management, HR)</a>
    </li>
</ul>