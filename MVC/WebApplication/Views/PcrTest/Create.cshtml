@model PcrTestViewModel

@{
    ViewData["Title"] = "Create PCR test";
}

<h2>@ViewData["Title"]</h2>

<form action="@Url.Action("SavePcrTest")" method="post">
    <div class="form-group">
        <label for="code">Code</label>
        <input type="text" class="form-control" id="code" name="Code" placeholder="Enter code">
    </div>
    <div class="form-group">
        <label for="comment">Commentaire</label>
        <textarea class="form-control" id="comment" name="Comment"  placeholder="Enter comment" rows="2"></textarea>
    </div>
    <div class="form-group">
        <label for="receptionDate">Date de r√©ception</label>
        <input type="date" class="form-control" name="ReceptionDate" id="receptionDate">
    </div>
    <div class="form-group">
        <label for="analysisDate">Date d'analyse</label>
        <input type="datetime-local" class="form-control" name="AnalysisDate" id="analysisDate">
    </div>
    <button type="button" class="btn btn-secondary">Retour</button>
    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>